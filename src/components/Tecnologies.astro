---
// src/components/Technologies.astro
import TailwindIcon from "./icons/Tailwind.astro";
import NextJSIcon from "./icons/NextJS.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import Vite from "./icons/Vite.astro";
import TypeScript from "./icons/TypeScript.astro";
import Python from "./icons/Python.astro";
import Java from "./icons/Java.astro";
import Docker from "./icons/Docker.astro";

enum TechnologyType {
  Frontend = 1,
  Backend = 2,
  Database = 3,
  Other = 4,
}

const TECHNOLOGIES = [
  {
    name: "JavaScript",
    icon: JavaScriptIcon,
    class: "bg-yellow-500 dark:bg-yellow-300/40",
    type: TechnologyType.Frontend,
  },
       {
    name: "Java",
    icon: Java,
    class: "bg-gray-600 dark:bg-gray-600",
    type: TechnologyType.Frontend,
  },
  {
    name: "TypeScript",
    icon: TypeScript,
    class: "bg-blue-400 dark:bg-blue-300/40",
    type: TechnologyType.Frontend,
  },
  {
    name: "Python",
    icon: Python,
    class: "bg-gray-600 dark:bg-gray-600",
    type: TechnologyType.Frontend,
  },

  {
    name: "NextJS",
    icon: NextJSIcon,
    class: "bg-black dark:bg-slate-800 dark:border-slate-600 dark:border-opacity-20 border-2",
    type: TechnologyType.Frontend,
  },
  
  {
    name: "React.js",
    icon: ReactIcon,
    class: "bg-gray-800 dark:border-slate-600 dark:border-opacity-20 border-2",
    type: TechnologyType.Frontend,
  },
    {
    name: "Docker",
    icon: Docker,
    class: "bg-black dark:bg-slate-800 dark:border-slate-600 dark:border-opacity-20 border-2",
    type: TechnologyType.Frontend,
  },
  {
    name: "Vite",
    icon: Vite,
    class: "bg-gray-600 dark:bg-gray-600",
    type: TechnologyType.Frontend,
  },
   {
    name: "Tailwind",
    icon: TailwindIcon,
    class: "bg-blue-700 dark:bg-blue-500/40",
    type: TechnologyType.Frontend,
  },
    {
    name: "HTML",
    icon: HTMLIcon,
    class: "bg-orange-600 dark:bg-orange-600",
    type: TechnologyType.Frontend,
  },
  {
    name: "CSS",
    icon: CSSIcon,
    class: "bg-blue-500 dark:bg-blue-300/40",
    type: TechnologyType.Frontend,
  },
  // {
  //   name: "Python",
  //   icon: Python,
  //   class: "bg-yellow-900  dark:bg-yellow-900 ",
  //   type: TechnologyType.Frontend,
  // },
  // {
  //   name: "Node.js",
  //   icon: Node,
  //   class: "bg-green-900 dark:bg-green-900",
  //   type: TechnologyType.Frontend,
  // },
];
---

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  {
    TECHNOLOGIES.map((technology) => (
      <div
        class={`flex flex-col items-center justify-center p-4 transition-all duration-300 ${technology.class} hover:scale-110 rounded-lg shadow-md`}
      >
        <technology.icon className="size-12" />
        <span class="mt-2 text-sm font-semibold text-white">
          {technology.name}
        </span>
      </div>
    ))
  }
</div>